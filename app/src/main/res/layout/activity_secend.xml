<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fragment_backgroud"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/tab_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"></FrameLayout>

    <RadioGroup
        android:id="@+id/table_radiogroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/fragment_backgroud"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:checked="true"
            android:drawableTop="@drawable/radiobtn_find"
            android:gravity="center"
            android:padding="5dp"
            android:text="发现"
            android:textColor="@drawable/radiobtn_text" />

        <RadioButton
            android:id="@+id/rb2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/radiobtn_condition"
            android:gravity="center"
            android:padding="5dp"
            android:text="动态"
            android:textColor="@drawable/radiobtn_text" />

        <RadioButton
            android:id="@+id/rb3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/radiobtn_mile"
            android:gravity="center"
            android:padding="5dp"
            android:text="邮箱"
            android:textColor="@drawable/radiobtn_text" />

        <RadioButton
            android:id="@+id/rb4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/radiobtn_me"
            android:gravity="center"
            android:padding="5dp"
            android:text="我的"
            android:textColor="@drawable/radiobtn_text" />

    </RadioGroup>

</LinearLayout>